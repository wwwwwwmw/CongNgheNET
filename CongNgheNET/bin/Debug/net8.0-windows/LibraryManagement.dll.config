<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <connectionStrings>
    <!-- 
    Chuỗi kết nối SQL Server cho mạng LAN:
    - Server: Thay đổi thành tên máy chủ SQL Server hoặc IP (ví dụ: 192.168.1.100\SQLEXPRESS)
    - Database: LibraryManagement
    - Sử dụng Windows Authentication hoặc SQL Server Authentication
    -->
    
    <!-- Kết nối với Windows Authentication (khuyến nghị cho mạng LAN nội bộ) -->
    <add name="LibraryDB" 
         connectionString="Server=.;Database=LibraryManagement;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True" 
         providerName="Microsoft.Data.SqlClient" />
    
    <!-- Kết nối với SQL Server Authentication (dùng khi cần user/password) -->
    <!--
    <add name="LibraryDB" 
         connectionString="Server=192.168.1.100;Database=LibraryManagement;User Id=sa;Password=YourPassword;TrustServerCertificate=True;MultipleActiveResultSets=True" 
         providerName="Microsoft.Data.SqlClient" />
    -->
  </connectionStrings>
  
  <appSettings>
    <!-- Cấu hình ứng dụng -->
    <add key="AppName" value="Quản Lý Thư Viện" />
    <add key="AppVersion" value="1.0.0" />
    <add key="MaxLoginAttempts" value="3" />
    <add key="SessionTimeout" value="30" />
  </appSettings>
</configuration>
